# Fly.io configuration pentru ViralSafe Backend
app = "viralsafe-backend"
primary_region = "fra"  # Frankfurt (Europe)

[build]
  # Fly.io detecteazÄƒ automat Python

[env]
  PORT = "8000"
  ENVIRONMENT = "production"
  CORS_ORIGINS = "*"

[http_service]
  internal_port = 8000
  force_https = true
  auto_stop_machines = "stop"
  auto_start_machines = true
  min_machines_running = 0
  processes = ["app"]

  # Health check pentru uptime
  [[http_service.checks]]
    grace_period = "10s"
    interval = "30s"
    method = "GET"
    timeout = "5s"
    path = "/health"

[processes]
  app = "uvicorn main:app --host 0.0.0.0 --port 8000 --workers 1"

# Resource limits pentru free tier
[[vm]]
  cpu_kind = "shared"
  cpus = 1
  memory_mb = 1024